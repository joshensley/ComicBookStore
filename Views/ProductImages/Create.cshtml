@model ComicBookStore.Models.ViewModels.ProductImageViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="text-center">
    <h1 class="display-4">Upload Image of @Model.ProductDTO.Name</h1>
</div>

<div class="border container" style="padding: 30px">
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>

        <input type="hidden" asp-for="ProductID" value="@Model.ProductDTO.ID" />
        <div class="form-group row">
            <div class="col-4">Image</div>
            <div class="col-6">
                <div class="custom-file">
                    <input asp-for="FileUpload" type="file" class="custom-file-input" id="customFile" />
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-4 col-6">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
        </div>

    </form>
</div>

<div class="mt-5">
    <div class="row d-flex justify-content-center">
        @foreach (var URL in Model.ProductImagesURL)
        {
            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 col-12 mt-2">
                <img src="@URL" alt="product" class="img-fluid " />
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}