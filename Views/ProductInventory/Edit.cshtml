@model ComicBookStore.Models.ViewModels.CreateProductInventoryViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Product Inventory</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="ID" value="@Model.ID" />
            <input type="hidden" asp-for="ProductID" value="@Model.ProductID" />
            <input type="hidden" asp-for="CreatedAt" value="@Model.CreatedAt" />
            <input type="hidden" asp-for="UpdatedAt" value="@Model.UpdatedAt" />
            <input type="hidden" asp-for="Quantity" value="1" />

            <div class="form-group">
                <label asp-for="InStock" class="control-label"></label>
                <input asp-for="InStock" class="form-control" />
                <span asp-validation-for="InStock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IsActive" class="control-label"></label>
                <input asp-for="IsActive" class="form-control" />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>